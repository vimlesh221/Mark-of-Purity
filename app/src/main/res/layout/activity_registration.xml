<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Create A New Account"
            android:textColor="@color/mYellowTextColor"
            android:textSize="22sp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_head"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Name*"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_name"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Display Name*"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_shopno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_user_name"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_user_shopno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Shop Name*"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_shopcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_user_shopno"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_user_shopcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Shop Code*"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_user_shopcode"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone*"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_phone"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/stateSpinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/til_email"
            android:spinnerMode="dialog" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stateSpinner"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="City"
                android:inputType="text"
                android:maxLength="150"
                android:maxLines="2"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_city"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Address"
                android:inputType="text"
                android:maxLength="150"
                android:maxLines="2"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_address"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_passowrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password*"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_password"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColorHint="@color/mInputTextColor">

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password*"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/mWhiteColor" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/relTermsAndCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_confirm_password"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp">

            <CheckBox
                android:id="@+id/chkTermsAndCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTermAndCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/chkTermsAndCondition"
                android:layout_toRightOf="@+id/chkTermsAndCondition"
                android:text="Agreement to the Terms of Use"
                android:textColor="@color/mInputTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/activity_login_rpe_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTermsAndCondition"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@mipmap/btnbgimg"
            android:padding="10dp"
            app:mrl_rippleColor="#FAD881"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/activitySignUpRlSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/activity_login_tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="SUBMIT"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>
</ScrollView>