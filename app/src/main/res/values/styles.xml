<?xml version="1.0" encoding="utf-8"?>
<!-- Android Views rendered in VR should use a theme that matches the rest of the VR UI.-->
<resources>


    <!-- Base application theme. -->
    <!--suppress AndroidDomInspection -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- Customize your theme here. -->
      <item name="android:windowIsTranslucent">false</item>
      <item name="android:windowBackground">@android:color/transparent</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
      <item name="android:windowActionBar">false</item>
      <item name="android:windowFullscreen">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>
    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TranslucentTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
      <item name="android:windowNoTitle">true</item>
      <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflowDashBoard</item>
      <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>


    <style name="MyActionButtonOverflowDashBoard" parent="android:style/Widget.Holo.ActionButton.Overflow">

        <item name="android:paddingTop">30dp</item>
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@style/NegativeButtonStyleAccent</item> <!-- Whatever color you want-->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="NegativeButtonStyleAccent" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
</resources>
